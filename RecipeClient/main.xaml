<Window x:Class="Recipe_Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ListViewBasicSample" Height="400" Width="800">
    <Grid Background="Black">
        <Label Content="RecipeApp" FontSize="28" Foreground="White" Margin="10,0,0,0"></Label>
        <Label Content="+" HorizontalAlignment="Left" FontSize="42" Margin="755,-12.5,0,0" Foreground="White" VerticalAlignment="Top"/>

        <Rectangle Height="2" Stroke="white" Width="800" Margin="0,45,0,330"/>


        <ListView Margin="10,60,10,10" SelectionChanged="ListView_SelectionChanged" Background="#1c1c1c">
            <ListViewItem Background="#2a2a2a" Foreground="White" Margin="0, 1, 0 ,1" FontSize="22">A ListView</ListViewItem>
            <ListViewItem Background="#2a2a2a" Foreground="White" IsSelected="True" Selected="ListViewItem_Selected" Margin="0, 1, 0 ,1" FontSize="22">with several</ListViewItem>
            <ListViewItem Background="#2a2a2a" Foreground="White" Margin="0, 1, 0 ,1" FontSize="22">items</ListViewItem>
        </ListView>
    </Grid>
</Window>